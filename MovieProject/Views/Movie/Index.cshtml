@model IEnumerable<MovieProject.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<div class="container mt-4">
    <h1 class="text-center">Movies</h1>

    <!-- Fetch Movies Butonu -->
    <div class="text-center mb-4">
        <button class="btn btn-primary" onclick="location.href='@Url.Action("FetchMovies", "Movie")'">Fetch Movies</button>
    </div>

    <!-- Türleri Listele -->
    <h2>Genres</h2>
    <ul class="list-inline">
        @foreach (var genre in ViewBag.Genres)
        {
            <li class="list-inline-item">
                <a href="#" class="btn btn-info" onclick="filterMoviesByGenre(@genre.GenreId)">@genre.GenreName</a>
            </li>
        }
    </ul>

    <div class="table-responsive">
        <table class="table table-striped table-hover mt-3">
            <thead class="thead-dark">
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Rating</th>
                    <th>Year</th>
                    <th>IMDB ID</th>
                    <th>IMDB Link</th>
                    <th>Genres</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in Model)
                {
                    <tr class="movieRow" data-genres='@Html.Raw(Json.Serialize(movie.MovieGenres.Select(mg => mg.GenreId)))'>
                        <td>
                            <img src="@movie.Image" alt="@movie.Title" class="img-fluid" style="width: 100px; height: auto;" />
                        </td>
                        <td>@movie.Title</td>
                        <td>@movie.Description</td>
                        <td>@movie.Rating</td>
                        <td>@movie.Year</td>
                        <td>@movie.ImdbId</td>
                        <td>
                            <a href="@movie.ImdbLink" target="_blank" class="btn btn-success">View on IMDB</a>
                        </td>
                        <td>
                            @foreach (var movieGenre in movie.MovieGenres)
                            {
                                <span class="badge badge-secondary">@movieGenre.Genre.GenreName</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@movie.MovieID" class="btn btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@movie.MovieID" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>
</div>

@section Scripts {
    <script>
        function filterMoviesByGenre(genreId) {
            const movieRows = document.querySelectorAll('.movieRow');
            movieRows.forEach(row => {
                const genres = JSON.parse(row.getAttribute('data-genres'));
                if (!genres.includes(genreId)) {
                    row.style.display = 'none';
                } else {
                    row.style.display = '';
                }
            });
        }
    </script>
}
